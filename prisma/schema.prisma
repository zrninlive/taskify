datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Board {
  id String @id @default(uuid())
  title String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  id String @id @default(uuid())
  title String
}